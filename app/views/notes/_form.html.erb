<%= form_with(model: note, local: true) do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table style="text-align:center;" class="table table-hover">
    <tbody>
      <tr><td>
      <div class="input-group" align="center">
        <%= form.text_field :title, id: :note_title, class:"input-group text-center", placeholder: :title %>
      </div>
      </td></tr>

      <tr><td>
      <div class="field">
        <div class="input-group">
          <div class="input-group-prepend">
            <label class="input-group-text" >Select Course</label>
          </div>
          <%= form.select :course_id , Course.all.map{ |c| [c.name, c.id.to_i]}, {class:"form-control"}%>
        </div>
      </div>
      </td></tr>

      <tr><td>
      <div class="field">
        <div class="input-group">
          <%= form.text_area :description, id: :note_description, class:"input-group text-left", placeholder: :description %>
      </div>
      </div>
      </td></tr>

      <tr><td>
      <div class="input-group">
        <%= form.label :file , class:"input-group-text"%>
        <%= form.file_field :file, class:"btn btn-secondary bg-dark"%>
      </div>
      </td></tr>

    </tbody>
  </table>


  <td><div class="btn-group" role="group" aria-label="...">
    <%= form.submit "Submit", class: "btn btn-success" %>
    <%= link_to 'Back', notes_path, class: "btn btn-secondary" %>
  </div></td>

<% end %>
