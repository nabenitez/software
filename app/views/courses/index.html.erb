

<div class='border-form-study-group' align="center">
<h1>Courses</h1>
<div class="row">
<table style="text-align:center;" class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Acronym</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.acronym %></td>
        <td><div class="btn-group" role="group" aria-label="...">
          <%= link_to 'Show', course, class:"btn btn-primary" %>
          <%= link_to 'Edit', edit_course_path(course), class:"btn btn-primary" %>
          <%= link_to 'Subscribe', subscribe_course_path(course), class:"btn btn-success" %>
          <%= link_to 'Notes', course_notes_path(course), class:"btn btn-secondary" %>
        </div></td>
        <td> <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%> </td>
      </tr>
    <% end %>



  </tbody>
</table>

</div>

<br>

<%= link_to 'New Course', new_course_path, class:"btn btn-primary" %>

</div>
