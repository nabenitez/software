<p id="notice"><%= notice %></p>
<div class='border-form-study-group' align="center">
<h1>External Events</h1>

<table style="text-align:center;" class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @external_events.each do |external_event| %>
      <tr>
        <td><%= external_event.name %></td>
        <td><%= external_event.start %></td>
        <td><%= external_event.end %></td>

        <td><div class="btn-group" role="group" aria-label="...">
        <%= link_to 'Edit', edit_external_event_path(external_event), class:"btn btn-primary" %>
        <%= link_to 'Join', edit_external_event_path(external_event), class:"btn btn-success" %>
        <%= link_to 'Destroy', external_event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New', new_external_event_path, class: "btn btn-primary" %>
