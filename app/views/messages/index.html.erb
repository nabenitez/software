
<div class='border-form-study-group' align="center">
  <% @messages.each do |message| %>
    <% if message.content %>
      <% user = User.find(message.user_id) %>
    <div class="item">
      <div class="panel-heading">
      <%- if user.email === current_user.email %>
      <div >

        <div class="d-flex justify-content-end bg-primary text-white" ><strong><%= user.email %> - <%= message.message_time %></strong> </div>
        <div class="d-flex justify-content-end bg-dark text-white"> <%= message.content %></div>
      <%- else %>
        <div class="d-flex justify-content-start bg-primary text-white"><strong><%= user.email %> - <%= message.message_time %></strong> </div>
        <div class="d-flex justify-content-start bg-dark text-white"> <%= message.content %></div>
      <% end %>

        </div>
      </div>
    <% end %>
  <% end %>

<br>
<div class="col-md-10 col-md-offset-1">
  <%= form_for [@conversation, @message] do |f| %>
<div class="form-group">
  <%= f.text_area :content, class: "form-control" %>
</div>
  <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
<div class="form-group">
  <%= f.submit "Send Reply", class: "btn btn-success" %>
</div>
  <% end %>
</div>

</div>
